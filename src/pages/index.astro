---
// layout
import BaseLayout from "@layouts/BaseLayout.astro";

// components
import HeroSideElectric from "@components/Hero/HeroSideElectric.astro";

// New HeyGo feature components
import FeatureDataVisualization from "@components/Feature/FeatureDataVisualization.astro";
import FeatureAICoach from "@components/Feature/FeatureAICoach.astro";
import FeatureTrainTogether from "@components/Feature/FeatureTrainTogether.astro";
import FeatureSensors from "@components/Feature/FeatureSensors.astro";

import CtaCardBgImage from "@components/Cta/CtaCardBgImage.astro";
import FooterHeyGo from "@components/Footer/FooterHeyGo.astro";

// utils
import { getLocaleFromUrl } from "@js/localeUtils";
import { getTranslatedData } from "@js/translationUtils";

// data
const currLocale = getLocaleFromUrl(Astro.url);
const siteData = getTranslatedData("siteData", currLocale);
---

<BaseLayout title={siteData.title} description={siteData.description}>
	<HeroSideElectric />
	
	<FeatureDataVisualization />
	<FeatureAICoach />
	<FeatureTrainTogether />
	<FeatureSensors />
	
	<CtaCardBgImage />
	
	<FooterHeyGo />
</BaseLayout>
