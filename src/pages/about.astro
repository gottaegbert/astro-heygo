---
/**
 * * About page for HeyGo - targeting users, team members, investors, and partners
 */
import { Icon } from "astro-icon/components";
import { getRelativeLocaleUrl } from "astro:i18n";

// main layout
import BaseLayout from "@layouts/BaseLayout.astro";

// components
import Profile from "@components/Profile/Profile.astro";
import Button from "@components/Button/Button.astro";
import CtaCenter from "@components/Cta/CtaCardBgImage.astro";
import Badge from "@components/Badge/Badge.astro";

// utils
import { getLocaleFromUrl } from "@js/localeUtils";
import { getTranslatedData } from "@js/translationUtils";

// data
const currLocale = getLocaleFromUrl(Astro.url);
const teamData = getTranslatedData("teamData", currLocale);
---

<BaseLayout
	title="About HeyGo"
	description="Revolutionizing snowboarding with AI-powered coaching from the future of 2030"
>
	<!-- Hero section -->
	<section class="dark bg-dark-bg mt-14 py-20">
		<div class="site-container mx-auto px-4">
			<div class="mx-auto max-w-4xl text-center">
				<div class="mx-auto mb-8 h-[20px] w-[134px] bg-[#00E0FF]"></div>
				<h1 class="mb-8 text-[56px] leading-[1.2] font-semibold text-white">
					The Future of Snowboarding is Here
				</h1>
				<p class="mx-auto mb-12 max-w-3xl text-xl leading-[1.5] text-white">
					Standing at the vantage point of 2030, we're building the AI-powered snowboarding coach
					that transforms how riders learn, improve, and experience the mountain. HeyGo isn't just
					technology – it's your personal pathway to mastery.
				</p>
			</div>
		</div>
	</section>

	<!-- Vision section -->
	<section class="py-20">
		<div class="site-container mx-auto px-4">
			<div class="mx-auto max-w-6xl">
				<div class="grid items-center gap-16 md:grid-cols-2">
					<div>
						<h2 class="mb-6 text-[40px] leading-[1.3] font-semibold">Our Vision</h2>
						<p class="mb-6 text-lg leading-[1.6]">
							We envision a world where every snowboarder has access to personalized, AI-powered
							coaching that adapts to their unique style, goals, and learning pace. Through
							real-time data analysis and video feedback, we're democratizing expertise that was
							once exclusive to professional athletes.
						</p>
						<p class="text-lg leading-[1.6]">
							By 2030, HeyGo will have empowered millions of riders to unlock their potential,
							pushing the boundaries of what's possible on the mountain.
						</p>
					</div>
					<div
						class="flex h-[300px] items-center justify-center rounded-[50px] bg-[#F8F9FA] p-8 dark:bg-[#2C2C2C]"
					>
						<div class="text-center">
							<div class="mb-4 text-4xl font-bold text-[#00E0FF]">2030</div>
							<div class="text-lg text-gray-600 dark:text-gray-300">The future we're building</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Technology section -->
	<section class="dark bg-dark-bg py-20">
		<div class="site-container mx-auto px-4">
			<div class="mx-auto max-w-6xl">
				<div class="mb-16 text-center">
					<h2 class="mb-6 text-[40px] leading-[1.3] font-semibold text-white">
						Revolutionary Technology
					</h2>
					<p class="mx-auto max-w-3xl text-lg leading-[1.6] text-white">
						Our AI combines computer vision, motion tracking, and machine learning to provide
						unprecedented insights into snowboarding performance.
					</p>
				</div>

				<div class="grid gap-8 md:grid-cols-3">
					<div class="text-center">
						<div
							class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-[#00E0FF]"
						>
							<Icon name="tabler/brain" class="h-8 w-8 text-black" />
						</div>
						<h3 class="mb-4 text-xl font-semibold text-white">AI-Powered Analysis</h3>
						<p class="text-base leading-[1.6] text-white">
							Advanced machine learning algorithms analyze thousands of data points to provide
							personalized coaching recommendations.
						</p>
					</div>
					<div class="text-center">
						<div
							class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-[#00E0FF]"
						>
							<Icon name="tabler/video" class="h-8 w-8 text-black" />
						</div>
						<h3 class="mb-4 text-xl font-semibold text-white">Real-Time Video Processing</h3>
						<p class="text-base leading-[1.6] text-white">
							Computer vision technology processes video feeds in real-time to track posture,
							balance, and technique.
						</p>
					</div>
					<div class="text-center">
						<div
							class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-[#00E0FF]"
						>
							<Icon name="tabler/device-mobile" class="h-8 w-8 text-black" />
						</div>
						<h3 class="mb-4 text-xl font-semibold text-white">Motion Sensor Integration</h3>
						<p class="text-base leading-[1.6] text-white">
							Precision sensors capture every movement, providing detailed metrics on speed,
							rotation, and balance.
						</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Target Audiences section -->
	<section class="py-20">
		<div class="site-container mx-auto px-4">
			<div class="mx-auto max-w-6xl">
				<div class="mb-16 text-center">
					<h2 class="mb-6 text-[40px] leading-[1.3] font-semibold">Who We Serve</h2>
					<p class="mx-auto max-w-3xl text-lg leading-[1.6]">
						HeyGo is built for everyone who shares our passion for snowboarding and believes in the
						power of technology to enhance human potential.
					</p>
				</div>

				<div class="grid gap-8 md:grid-cols-2">
					<div class="rounded-[30px] bg-[#F8F9FA] p-8 dark:bg-[#2C2C2C]">
						<div class="mb-6 flex h-12 w-12 items-center justify-center rounded-full bg-[#00E0FF]">
							<Icon name="tabler/mountain" class="h-6 w-6 text-black" />
						</div>
						<h3 class="mb-4 text-xl font-semibold">For Riders</h3>
						<p class="mb-4 text-base leading-[1.6]">
							Whether you're a beginner taking your first turns or an expert pushing your limits,
							HeyGo adapts to your skill level and goals.
						</p>
						<ul class="space-y-2 text-sm">
							<li>• Personalized coaching recommendations</li>
							<li>• Progress tracking and analytics</li>
							<li>• Community features and challenges</li>
							<li>• Safety monitoring and alerts</li>
						</ul>
					</div>

					<div class="rounded-[30px] bg-[#F8F9FA] p-8 dark:bg-[#2C2C2C]">
						<div class="mb-6 flex h-12 w-12 items-center justify-center rounded-full bg-[#00E0FF]">
							<Icon name="tabler/briefcase" class="h-6 w-6 text-black" />
						</div>
						<h3 class="mb-4 text-xl font-semibold">For Partners</h3>
						<p class="mb-4 text-base leading-[1.6]">
							Join us in revolutionizing the snowboarding industry through strategic partnerships,
							investment, or collaboration.
						</p>
						<ul class="space-y-2 text-sm">
							<li>• Investment opportunities in growing market</li>
							<li>• Partnership with ski resorts and brands</li>
							<li>• Career opportunities in cutting-edge tech</li>
							<li>• Industry leadership in AI sports coaching</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Call to Action -->
	<section class="dark bg-dark-bg py-20">
		<div class="site-container mx-auto px-4">
			<div class="mx-auto max-w-4xl text-center">
				<h2 class="mb-8 text-[40px] leading-[1.3] font-semibold text-white">
					Ready to Shape the Future of Snowboarding?
				</h2>
				<p class="mx-auto mb-12 max-w-2xl text-lg leading-[1.6] text-white">
					Whether you're a rider, investor, partner, or potential team member, we invite you to join
					our journey.
				</p>
				<div class="flex flex-col justify-center gap-4 sm:flex-row">
					<Button
						variant="primary"
						href={getRelativeLocaleUrl(currLocale, "/contact")}
						class="rounded-full bg-[#00E0FF] px-8 py-4 font-semibold text-black hover:bg-[#00E0FF]/90"
					>
						Get Early Access
					</Button>
					<Button
						variant="secondary"
						href={getRelativeLocaleUrl(currLocale, "/investors")}
						class="rounded-full border-[#00E0FF] px-8 py-4 font-semibold text-[#00E0FF] hover:bg-[#00E0FF]/10"
					>
						Learn About Investment
					</Button>
				</div>
			</div>
		</div>
	</section>
</BaseLayout>
