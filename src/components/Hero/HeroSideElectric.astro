---
/**
 * * Hero with lightning animation on the side
 */
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import { getRelativeLocaleUrl } from "astro:i18n";

// components
import Button from "@components/Button/Button.astro";
import HeyGoDigitalMountain from "@components/Canvas/HeyGoDigitalMountain.astro";
import VaporwaveHero from "@components/Canvas/VaporwaveHero.astro";

// utils
import { getLocaleFromUrl } from "@js/localeUtils";
import { useTranslations } from "@js/translationUtils";

import heroImage from "@images/hero.jpeg";

interface Props {
  enableVaporwave?: boolean;
}

const { enableVaporwave = false } = Astro.props;
const currLocale = getLocaleFromUrl(Astro.url);
const t = useTranslations(currLocale);
---

<!-- "dark" class forces dark mode for this section -->
<section id="hero-electric" class="dark mt-14 overflow-x-clip relative min-h-screen">
	<!-- Background Image -->
	<div class="absolute inset-0 w-full h-full">
		<Image
			src={heroImage}
			alt="Snowboarder carving down pristine mountain slopes"
			class="w-full h-full object-cover"
			loading="eager"
			width={1920}
			height={1080}
		/>
		<!-- Gradient overlay for text readability -->
		<div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/40 to-transparent"></div>
		<div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-black/30"></div>
	</div>
	
	<!-- Vaporwave Three.js Effect - only enabled when specified -->
	<VaporwaveHero enabled={enableVaporwave} />
	
	<div class="site-container mx-auto px-4 pb-16 pt-20 md:pt-32 relative z-20">

		
		
		<div class="mx-auto my-auto w-full pt-4 pb-10  md:max-w-[560px] md:pt-10 lg:pr-10">
				
									<!-- <div class=" h-[469px] w-full bg-transparent overflow-hidden">
										<HeyGoDigitalMountain />
									</div> -->
			
				
				<div
					class="mx-auto max-w-[527px] md:ml-0"
					data-aos="fade-up"
					data-aos-trigger="#hero-electric"
				>
									<h1
					class="text-white mb-6 text-[56px] leading-[1.36] font-semibold tracking-tight text-pretty md:leading-[1.36]"
					style="text-shadow: 2px 2px 4px rgba(0,0,0,0.8);"
				>
					HeyGo
				</h1>
				<h2 class="text-white text-[32px] leading-[1.36] font-medium mb-4"
					style="text-shadow: 1px 1px 3px rgba(0,0,0,0.8);"
				>
					Your AI Snowboarding Coach, 
					Effortless Ride Made Easy
				</h2>
					
				</div>
							<p
				class="text-white mb-8 text-base leading-[1.36] text-pretty lg:text-base max-w-[464px]"
				data-aos="fade-up"
				data-aos-delay=".1"
				data-aos-trigger="#hero-electric"
				style="text-shadow: 1px 1px 2px rgba(0,0,0,0.8);"
			>
				HeyGo gives snowboarders the real-time insights and precision feedback once only available to pros.
			</p>
				<div
					class="mt-6 flex flex-wrap justify-start gap-4"
					data-aos="fade-up"
					data-aos-delay=".2"
					data-aos-trigger="#hero-electric"
				>
									<Button 
					variant="secondary" 
					class="bg-white/95 text-black hover:bg-white rounded-full px-9 py-4 text-2xl font-semibold flex items-center gap-3 backdrop-blur-sm shadow-lg border border-white/20"
					href={getRelativeLocaleUrl(currLocale, "/contact")}
				>
						Contact us
						<Icon 
							name="arrow-right"
							class="mr-1.5 -ml-1 size-3 opacity-70"
							aria-hidden="true"
						/>
					</Button>
				</div>
			</div>
		</div>
	</div>
</section>
