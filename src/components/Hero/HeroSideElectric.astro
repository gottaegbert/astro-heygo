---
/**
 * * Hero with lightning animation on the side
 */
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import { getRelativeLocaleUrl } from "astro:i18n";

// components
import Button from "@components/Button/Button.astro";
import HeyGoDigitalMountain from "@components/Canvas/HeyGoDigitalMountain.astro";

// utils
import { getLocaleFromUrl } from "@js/localeUtils";
import { useTranslations } from "@js/translationUtils";

import heroImage from "@images/storm-2.webp";

const currLocale = getLocaleFromUrl(Astro.url);
const t = useTranslations(currLocale);
---

<!-- "dark" class forces dark mode for this section -->
<section id="hero-electric" class="dark bg-dark-bg mt-14 overflow-x-clip">
	<div class="site-container mx-auto px-4 pb-10 md:pt-10">
		<div
			class="mx-auto grid max-w-md text-center md:max-w-5xl md:grid-cols-2 md:text-left xl:items-center"
		>
			<div
				class="h-full w-full flex-grow md:order-2"
				data-aos="fade-in"
				data-aos-trigger="#hero-electric"
				data-aos-delay="1"
				data-aos-duration="1"
			>
				<div class="mx-auto -my-10 max-w-[250px] md:my-0 md:ml-0 md:max-w-[520px]">
					<!-- HeyGo WebGL Hero with futuristic snowboarding effects -->
					      <!-- Placeholder for HeyGo Sensor & Snowboarding scenario
						  <div class="bg-zinc-700/60 rounded-[50px] h-[469px] w-full flex items-center justify-center">
							<div class="text-center text-white">
								<div class="text-3xl font-semibold mb-4">HeyGo Sensor</div>
								<div class="text-3xl font-semibold">&</div>
								<div class="text-3xl font-semibold">Snowboarding scenario</div>
							</div> -->

					<div class="rounded-[50px] h-[469px] w-full overflow-hidden">
						<HeyGoDigitalMountain />
					</div>
				</div>
			</div>

			<div class="mx-auto my-auto w-full pt-4 pb-10 md:ml-0 md:max-w-[560px] md:pt-10 lg:pr-10">
				<!-- Blue accent bar -->
				<div 
					class="w-[134px] h-[20px] bg-[#00E0FF] mb-12"
					data-aos="fade-up"
					data-aos-trigger="#hero-electric"
				></div>
				
				<div
					class="mx-auto max-w-[527px] md:ml-0"
					data-aos="fade-up"
					data-aos-trigger="#hero-electric"
				>
					<h1
						class="text-white mb-6 text-[56px] leading-[1.36] font-semibold tracking-tight text-pretty md:leading-[1.36]"
					>
						HeyGo
					</h1>
					<h2 class="text-white text-[32px] leading-[1.36] font-medium mb-4">
						Your AI Snowboarding Coach, 
						Effortless Ride Made Easy
					</h2>
					
				</div>
				<p
					class="text-white mb-8 text-base leading-[1.36] text-pretty lg:text-base max-w-[464px]"
					data-aos="fade-up"
					data-aos-delay=".1"
					data-aos-trigger="#hero-electric"
				>
					HeyGo gives snowboarders the real-time insights and precision feedback once only available to pros.
				</p>
				<div
					class="mt-6 flex flex-wrap justify-start gap-4"
					data-aos="fade-up"
					data-aos-delay=".2"
					data-aos-trigger="#hero-electric"
				>
					<Button 
						variant="secondary" 
						class="bg-white/90 text-black hover:bg-white rounded-full px-9 py-4 text-2xl font-semibold flex items-center gap-3"
						href={getRelativeLocaleUrl(currLocale, "/contact")}
					>
						Contact us
						<Icon 
							name="arrow-right"
							class="mr-1.5 -ml-1 size-3 opacity-70"
							aria-hidden="true"
						/>
					</Button>
				</div>
			</div>
		</div>
	</div>
</section>
