/**
 * * Sensors feature section
 */
---

<section class="dark bg-dark-bg py-16">
	<div class="site-container mx-auto px-4">
		<div class="flex flex-col items-center gap-20 max-w-6xl mx-auto">
			<!-- Header Section -->
			<div class="text-center max-w-2xl">
				<h2 class="text-white text-[40px] leading-[1.36] font-semibold text-center mb-3">
					Powerful Sensors. Minimal Setup.
				</h2>
				<p class="text-white text-base leading-[1.36] text-center">
					HeyGo's ultra-light motion modules attach to your boots in seconds and sync with your phone automatically.
				</p>
			</div>

			<!-- Sensors Grid -->
			<div class="flex flex-col gap-4 w-full max-w-[1138px]">
				<!-- First Row -->
				<div class="flex flex-col md:flex-row gap-4">
					<!-- Headwear -->
					<div class="flex-1 flex flex-col justify-center gap-4 bg-[#4A4A4A]/60 rounded-[50px] p-8 h-[368px]">
						<h3 class="text-white text-2xl font-medium">Headwear</h3>
						<p class="text-white text-lg font-medium">Measure airtime, rotation, and landing stability</p>
					</div>
					<!-- Helmet wear -->
					<div class="flex-1 flex flex-col justify-center gap-4 bg-[#4A4A4A]/60 rounded-[50px] p-8 h-[368px]">
						<h3 class="text-white text-2xl font-medium">Helmet wear</h3>
						<p class="text-white text-lg font-medium">Track edge angles and turn symmetry</p>
					</div>
				</div>

				<!-- Second Row -->
				<div class="flex flex-col md:flex-row gap-4">
					<!-- Smart shoes -->
					<div class="flex-1 flex flex-col justify-center gap-4 bg-[#4A4A4A]/60 rounded-[50px] p-8 h-[368px]">
						<h3 class="text-white text-2xl font-medium">Smart shoes</h3>
						<p class="text-white text-lg font-medium">Measure airtime, rotation, and landing stability</p>
					</div>
					<!-- etc. -->
					<div class="flex-1 flex flex-col justify-center gap-4 bg-[#4A4A4A]/60 rounded-[50px] p-8 h-[368px]">
						<h3 class="text-white text-2xl font-medium">etc.</h3>
						<p class="text-white text-lg font-medium">Track edge angles and turn symmetry</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section> 
