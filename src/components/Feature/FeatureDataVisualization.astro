---
/**
 * * Data visualization feature section
 */
---

<section class="dark bg-dark-bg py-16">
	<div class="site-container mx-auto px-4">
		<div class="flex flex-col items-center gap-20 max-w-6xl mx-auto">
			<!-- Header Section -->
			<div class="text-center max-w-2xl">
				<h2 class="text-white text-[40px] leading-[1.36] font-semibold text-center mb-3">
					Visualize Your Ride Like Never Before
				</h2>
				<p class="text-white text-base leading-[1.36] text-center">
					Replay every run with dynamic 3D models and side-by-side video overlays.
				</p>
			</div>

			<!-- Content Section -->
			<div class="flex flex-col items-center gap-8 w-full max-w-[1136px]">
				<!-- Data Analysis Badge -->
				<div class="bg-[#2C2C2C] rounded-[50px] px-8 py-4">
					<span class="text-white text-2xl font-semibold">Data analysis</span>
				</div>

				<!-- Dots Visualization -->
				<div class="flex gap-8">
					<div class="w-2.5 h-2.5 bg-[#D9D9D9] rounded-full"></div>
					<div class="w-2.5 h-2.5 bg-[#D9D9D9] rounded-full opacity-30"></div>
					<div class="w-2.5 h-2.5 bg-[#D9D9D9] rounded-full opacity-30"></div>
					<div class="w-2.5 h-2.5 bg-[#D9D9D9] rounded-full opacity-30"></div>
				</div>
			</div>
		</div>
	</div>
</section> 
