---
/**
 * * Logo cloud section marquee
 *
 * These are taken from the src/icons folder. You may desire to modify any SVGs you use to have the fill set to "currentColor"
 * to use the current text color. That is how I have set up these icons for demo purposes
 */

import { Icon } from "astro-icon/components";
---

<section
	id="logo-cloud-marquee"
	class="border-base-200 text-base-800 dark:border-base-800 dark:text-base-400 border-y px-4 py-6"
>
	<div class="relative mx-auto max-w-[1700px] overflow-hidden">
		<!-- left fade-out -->
		<div
			class="from-base-50 dark:from-dark-bg absolute top-0 -left-px z-10 h-full w-[20%] bg-gradient-to-r from-20% to-transparent"
		>
		</div>
		<!-- right fade-out -->
		<div
			class="to-base-50 dark:to-dark-bg absolute top-0 -right-px z-10 h-full w-[20%] bg-gradient-to-r from-transparent to-80%"
		>
		</div>

		<div class="logo-marquee relative flex gap-20">
			<!-- Each animate-marquee2 section needs to have the exact same icons. Just do one then copy / paste -->
			<div class="animate-marquee2 flex min-w-full shrink-0 items-center justify-around gap-20">
				<Icon name="logos/astro" class="logo py-2" aria-label="logo" />

				<Icon name="logos/spotify" class="logo" aria-label="logo" />

				<Icon name="logos/framer" class="logo" aria-label="logo" />

				<Icon name="logos/dribbble" class="logo" aria-label="logo" />

				<Icon name="logos/sanity" class="logo py-2" aria-label="logo" />

				<Icon name="logos/contentfull" class="logo" aria-label="logo" />

				<Icon name="logos/github" class="logo" aria-label="logo" />

				<Icon name="logos/notion" class="logo" aria-label="logo" />

				<Icon name="logos/adobe" class="logo" aria-label="logo" />

				<Icon name="logos/zoom" class="logo" aria-label="logo" />
			</div>

			<div
				aria-hidden="true"
				class="animate-marquee2 flex min-w-full shrink-0 items-center justify-around gap-20"
			>
				<Icon name="logos/astro" class="logo py-2" aria-label="logo" />

				<Icon name="logos/spotify" class="logo" aria-label="logo" />

				<Icon name="logos/framer" class="logo" aria-label="logo" />

				<Icon name="logos/dribbble" class="logo" aria-label="logo" />

				<Icon name="logos/sanity" class="logo py-2" aria-label="logo" />

				<Icon name="logos/contentfull" class="logo" aria-label="logo" />

				<Icon name="logos/github" class="logo" aria-label="logo" />

				<Icon name="logos/notion" class="logo" aria-label="logo" />

				<Icon name="logos/adobe" class="logo" aria-label="logo" />

				<Icon name="logos/zoom" class="logo" aria-label="logo" />
			</div>
		</div>
	</div>
</section>

<style>
	@import "tailwindcss/theme" theme(reference);
	@import "@/styles/tailwind-theme.css" theme(reference);

	.logo {
		@apply h-10 w-auto md:h-12;
	}
</style>
