---
/**
 * * Logo sloud section static
 *
 * These are taken from the src/icons folder. You may desire to modify any SVGs you use to have the fill set to "currentColor"
 * to use the current text color. That is how I have set up these icons for demo purposes
 */

import { Icon } from "astro-icon/components";

//components
import Badge from "@components/Badge/Badge.astro";

interface Props {
	class?: string; // classes to add
	rest?: any; // catch-all for any additional parameters, such as "aria-label"
}

const { class: Classname, ...rest } = Astro.props as Props;
---

<section id="logo-cloud-static" class="flex items-end justify-center py-10" class:list={Classname}>
	<div
		class="text-base-800 dark:text-base-400 mx-4 grid grow gap-y-8 md:max-w-5xl md:grid-cols-3"
		{...rest}
	>
		<div
			class="m-auto flex items-center justify-center text-center md:ml-0 md:max-w-[270px] md:justify-start md:text-left"
		>
			<h2
				class="text-base-900 dark:text-base-300 text-xl leading-tight font-medium tracking-tight md:text-3xl md:leading-tight"
			>
				Trusted by brands all over the world.
			</h2>
		</div>
		<div class="md:col-span-2">
			<div class="grid w-full grid-cols-2 gap-x-2 gap-y-4 sm:grid-cols-3">
				<div class="flex px-8">
					<Icon name="logos/astro" class="logo py-2" aria-label="logo" />
				</div>

				<div class="flex px-8">
					<Icon name="logos/dribbble" class="logo" aria-label="logo" />
				</div>

				<div class="flex px-8">
					<Icon name="logos/sanity" class="logo py-2" aria-label="logo" />
				</div>

				<div class="flex px-8">
					<Icon name="logos/contentfull" class="logo" aria-label="logo" />
				</div>

				<div class="flex px-8">
					<Icon name="logos/github" class="logo" aria-label="logo" />
				</div>

				<div class="flex px-8">
					<Icon name="logos/notion" class="logo" aria-label="logo" />
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	@import "tailwindcss/theme" theme(reference);
	@import "@/styles/tailwind-theme.css" theme(reference);

	.logo {
		@apply mx-auto h-10 w-auto;
	}
</style>
