---
import { Icon } from "astro-icon/components";
import { getRelativeLocaleUrl } from "astro:i18n";

// components
import Button from "@components/Button/Button.astro";

// utils
import { getLocaleFromUrl } from "@js/localeUtils";

// data
const currLocale = getLocaleFromUrl(Astro.url);
---

<div class="w-full">
	<div class="mb-12">
		<h1 class="h2 text-base-900 dark:text-base-200 mb-2 text-xl">Reset password</h1>
		<p class="text-base-600 dark:text-base-400 tracking-tight">
			<span class="description">Already know your password?</span>
			<a
				class="text-primary-500 hover:text-primary-600 whitespace-nowrap transition duration-200"
				href={getRelativeLocaleUrl(currLocale, "/login")}>Sign in</a
			>
		</p>
	</div>
	<div class="mb-6">
		<form class="-m-2 flex flex-wrap" id="resetpass__form" name="resetpass__form">
			<div class="w-full p-2">
				<label class="block">
					<input
						class="form__input w-full"
						id="resetpass__email"
						type="email"
						placeholder="Email Address"
						required
					/>
				</label>
			</div>
			<div class="w-full p-2">
				<Button variant="primary" type="submit" class="w-full rounded-md before:rounded-md"
					>Submit</Button
				>
			</div>
		</form>
	</div>
</div>
