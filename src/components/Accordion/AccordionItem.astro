---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"div"> & {
	/**
	 * The value of the item
	 */
	value: string;
};

const { value, class: className, ...rest } = Astro.props;
---

<div
	class:list={[
		"starwind-accordion-item",
		"group border-base-200 bg-base-50 text-foreground/70 dark:border-base-800 dark:bg-dark-bg relative rounded-xl border text-left font-medium",
		className,
	]}
	data-value={value}
	data-state="closed"
	{...rest}
>
	<slot />
</div>
